{
  "manifest_version": 3,
  "name": "Chad",
  "version": "1.0",
 "description": "A personal AI assistant that seamlessly embeds into every text area",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "./src/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./src/content.js"]
    }
  ]
}
