{
  "manifest_version": 3,
  "name": "Textarea Overlay",
  "version": "1.0",
  "description": "Shows clickable overlays on textareas",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
